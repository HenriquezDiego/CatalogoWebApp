
@{
    ViewData["Title"] = "Table";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Table Testing</h2>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
    <tr>
        <th>AutorId</th>
        <th>Codigo</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>CarreraId</th>
    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>AutorId</th>
        <th>Codigo</th>
        <th>Nombres</th>
        <th>Apellidos</th>
        <th>CarreraId</th>
    </tr>
    </tfoot>
</table>

@section script {
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#example').DataTable( {
                "ajax": {
                    "url": '/api/autores',
                    "dataSrc": '',
                    "type": "GET",
                    "dataType": "json"
                },
                "columns": [
                    { "data": "autorId" },
                    { "data": "codigo" },
                    { "data": "nombres" },
                    { "data": "apellidos" },
                    { "data": "carreraId" }
                ]
            } );
        } );
    </script>

}

