@using CatalogoWebApp.Services
@using Microsoft.AspNetCore.Http

@model CatalogoWebApp.Models.TrabajoDeGraduacion
@inject IPathResolver _pathResolver
@inject IHttpContextAccessor _httpContextAccessor

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var imgUrl = _pathResolver.GetUrl(Model.PathImagen);
    var user = _httpContextAccessor.HttpContext.Session.GetString("_Name");
}

<div class="row">
    <h4 class="text-center">Trabajo de graduacion</h4>
    <hr />
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
        <img class="img-responsive img-info"
             src="@imgUrl" alt="Alternate Text" />
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Autor)
            </dt>
            <dd>
                @Model.Autor.Nombres @Model.Autor.Apellidos
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Descripcion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descripcion)
            </dd>
            <dt>
                Año de publicacion
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Fecha.Year)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Tipo.TipoId)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Autor.Carrera)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Autor.Carrera.Nombre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Autor.Carrera.Facultad)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Autor.Carrera.Facultad.Nombre)
            </dd>
        </dl>
    </div>
</div>

<div class="form-group text-center">

    @if (user != null)
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.TrabajoDeGraduacionId">
            <i class="fa fa-edit"></i><span>Editar</span>
        </a>
        <a class="btn btn-primary" asp-action="Index"><i class="fa fa-undo"></i><span>Regresar</span></a>

    }
    else
    {
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index"><i class="fa fa-undo"></i><span> Regresar</span></a>
    }
</div>
