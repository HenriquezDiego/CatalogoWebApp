                @Html.DisplayFor(modelItem => item.Autor.AutorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.PathImagen)
            </td>*@
