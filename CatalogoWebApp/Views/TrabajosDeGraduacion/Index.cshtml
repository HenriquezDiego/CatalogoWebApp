            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TrabajoDeGraduacionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TrabajoDeGraduacionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TrabajoDeGraduacionId">Delete</a>
